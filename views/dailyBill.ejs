<% include partials/header %>
<div class="container">
    <table class="centered highlight">
            <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Rate</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                  </thead>
          <tbody>
                <% for (let i = 0; i < items.length; ++i) { %>
                    <tr>
                        <td><%= items[i].name %></td>
                        <td><%= items[i].rate %></td>
                        <td><%= items[i].qty %></td>
                        <td><%= items[i].price %></td>
                    </tr>
                <% } %>
                <tr>
                    <td colspan="3">Total Price</td>
                    <td><%= total %></td>
                </tr>
          </tbody>
    </table>
    <form action="/finalize" method="POST">

        <div id="print" class="row" style="padding-left:20em;padding-right: 20em;" align="center">
               <button class="btn waves-effect waves-light" type="submit" name="action">Print
                        <i class="material-icons right">print</i>
                      
                </button>
            </div>
      
                    
    </form>

</div>

<% include partials/footer %>