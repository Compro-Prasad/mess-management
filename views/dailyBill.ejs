<% include partials/header %>
<div class="container">
    <table class="responsive-table" class="centered" class="highlight">
            <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Rate</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                  </thead>
          <tbody>
                <% for (let i = 0; i < items.length; ++i) { %>
                    <tr>
                        <td><%= items[i].name %></td>
                        <td><%= items[i].rate %></td>
                        <td><%= items[i].qty %></td>
                        <td><%= items[i].price %></td>
                    </tr>
                <% } %>
                <tr>
                    <td colspan="3">Total Price</td>
                    <td><%= total %></td>
                </tr>
          </tbody>
    </table>
    <form action="/finalize" method="POST">
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
              </button>
                    
    </form>
</div>
<% include partials/footer %>