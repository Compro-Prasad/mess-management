<% include partials/header %>
<style>
        .myresponsive {
            padding-top: 40px;
            padding-left: 25%;
            padding-right: 25%;
        }
        @media screen and (max-width: 700px) {
            .myresponsive {
                padding-left: 15px;
                padding-right: 15px;
            }
        }
       </style>
<div class="container myresponsive">
        <form action="/changerate" method="post"  >
            <div class="md-form">
               
                    <select id="rateid" name="rate[id]">
                        <% for (let i = 0; i < row.length; ++i) { %>
                            <option value='{"id": <%= row[i].dataValues.id %>,
                                           "oldPrice": <%= row[i].dataValues.price %>}'><%= row[i].dataValues.name %>
                            </option>
                        <% } %>
                    </select>
                    <label for="orangeForm-rate[id]">Item Name</label>
            </div>
            <div class="md-form">
                    
                    <input type="text" id="orangeForm-rate[newPrice]" name="rate[newPrice]" />
                    <label for="orangeForm-rate[newPrice]">Item Price</label>
                </div>
            
            <div class="md-form">
             
                <input type="password" id="orangeForm-pass" name="password">
                <label for="orangeForm-pass">Your password</label>
            </div> 
           
            <div class="text-center">
                    <button class="btn btn-default">Submit</button>
            </div>
        </form>
        <script>
         function getSelectedRate() {
             let el = $("select[name='rate[id]']");
             let val = JSON.stringify($(el).children(":selected").attr("value"));
             val = JSON.parse(JSON.parse(val));
             return val;
         }
         function setNewPrice(str) {
             let el = $("input[name='rate[newPrice]']")[0];
             console.log(el, str);
             el.value = str;
         }
         $(document).ready(function () {
             setNewPrice(getSelectedRate().oldPrice);
         })
         $("select[name='rate[id]']").change(function () {
             setNewPrice(getSelectedRate().oldPrice);
         });
        </script>
</div>
<% include partials/footer %>
